---
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";

const { more } = Astro.props;
---

<section class="section">
  <div class="container md:w-3/4 lg:1/2 xl:w-full">
    <div class="row g-5 justify-center">
      <div class="col-12 lg:col-10">
        <h2
          set:html={markdownify(more.title)}
          class="text-center mb-6"
          data-aos="fade-up-sm"
        />
        <p
          set:html={markdownify(more.content)}
          class="text-center text-lg"
          data-aos="fade-up-sm"
        />
      </div>
      <div class="col-12">
        <div class="row g-4 justify-center xl:justify-between items-center">
          {
            more.points.map((p: any, i: number) => (
              <div
                class="col-12 md:col-6 xl:col-3"
                data-aos="fade-up-sm"
                data-aos-delay={50 + i * 100}
              >
                <div class="flex flex-col items-center">
                  <DynamicIcon
                    icon={p.icon}
                    className="mb-6 text-primary text-5xl"
                    data-aos="zoom-in-sm"
                    data-aos-delay={50 + i * 50}
                  />
                  <p
                    set:html={markdownify(p.details)}
                    class="text-center text-xl font-medium"
                    data-aos="fade-up-sm"
                    data-aos-delay={50 + i * 50}
                  />
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
